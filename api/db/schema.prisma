datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Airman {
  id                  Int       @id @default(autoincrement())
  email               String    @unique
  hashedPassword      String
  salt                String
  firstName           String?
  middleName          String?
  lastName            String?
  organization        String?
  dodId               String?
  rank                String?
  officeSymbol        String?
  roleObj             Role?     @relation(fields: [roles], references: [name])
  roles               String?
  resetToken          String?
  resetTokenExpiresAt DateTime?
  supervisorId        Int?
  monitorId           Int?
}

model Role {
  id     Int      @id @default(autoincrement())
  name   String   @unique
  Airman Airman[]
}

model Training {
  id             Int         @id @default(autoincrement())
  name           String      @unique
  duration       Int
  link           String?
  description    String?
  collectionsObj Collection? @relation(fields: [collections], references: [name])
  collections    String[]
}

model Collection {
  id       Int        @id @default(autoincrement())
  name     String[]   @unique
  Training Training[]
}
